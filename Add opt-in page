  <style>
    body { font-family: Arial, sans-serif; background: #f7f7f7; padding: 40px; text-align: center; }
    .container { background: #fff; padding: 30px; border-radius: 10px; max-width: 500px; margin: auto; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
    h1 { color: #333; }
    label { display: block; margin: 20px 0 10px; font-size: 16px; }
    input[type="checkbox"] { margin-right: 10px; }
    button { padding: 10px 20px; font-size: 16px; border: none; border-radius: 5px; background: #007bff; color: white; cursor: pointer; }
    button:hover { background: #0056b3; }
    .confirmation { color: green; margin-top: 20px; display: none; }
  </style>
